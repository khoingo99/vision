// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // DÙNG NHANH: SQLite local
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique // 아이디
  email        String   @unique
  name         String?
  phone        String // 전화번호 (bắt buộc)
  passwordHash String
  createdAt    DateTime @default(now())

  accounts Account[]
  sessions Session[]
  Ticket   Ticket[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --------- Ticketing models ---------

model Ticket {
  id Int @id @default(autoincrement())

  // SQLite không hỗ trợ enum -> dùng String + default
  // type   : "SERVER" | "CAMERA" | "LIGHT" | "NETWORK" | "OTHER"
  // status : "NEW" | "ASSIGNED" | "IN_PROGRESS" | "REVIEW" | "HOLD" | "CANCELED" | "DONE"
  type   String @default("OTHER")
  status String @default("NEW")

  title   String
  content String // có thể lưu HTML từ WYSIWYG

  // Quan hệ đính kèm
  attachments Attachment[]

  // Tác giả (nếu user đang đăng nhập)
  authorId String?
  author   User?   @relation(fields: [authorId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Attachment {
  id       Int    @id @default(autoincrement())
  name     String
  url      String // "/uploads/xxx.jpg" hoặc URL cloud
  size     Int
  mimetype String

  ticketId Int
  ticket   Ticket @relation(fields: [ticketId], references: [id])

  createdAt DateTime @default(now())
}
